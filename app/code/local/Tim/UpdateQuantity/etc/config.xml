<config>
    <modules>
        <Tim_UpdateQuantity>
            <version>0.0.1</version>
        </Tim_UpdateQuantity>
    </modules>
    <global>
        <helpers>
            <tim_update_quantity>
                <class>Tim_UpdateQuantity_Helper</class>
            </tim_update_quantity>
        </helpers>
        <models>
            <tim_update_quantity>
                <class>Tim_UpdateQuantity_Model</class>
            </tim_update_quantity>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Tim_UpdateQuantity>
                    <files>
                        <default>Tim_UpdateQuantity.csv</default>
                    </files>
                </Tim_UpdateQuantity>
            </modules>
        </translate>
