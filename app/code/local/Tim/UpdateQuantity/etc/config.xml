        <jobs>
            <tim_send_product_reports>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>tim_update_quantity/update::run</model></run>
            </tim_send_product_reports>
        </jobs>
    </crontab>
